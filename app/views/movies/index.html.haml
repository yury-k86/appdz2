-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", '1', (session[:selected_ratings].count(rating) != 0 ? true : false), :id => 'ratings_' + "#{rating}"
    -#= session[:selected_ratings].count(rating)
  = submit_tag 'Refresh', :id => "ratings_submit"
%table#movies
  %thead
    %tr
      %th{:class => (@highlight_title ? "hilite" : "")}= link_to "Movie Title", movies_path({:sort_header => "title"}), :id => "title_header"
      %th Rating
      %th{:class => (@highlight_release_date ? "hilite" : "")}= link_to "Release Date", movies_path({:sort_header => "release_date"}), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
